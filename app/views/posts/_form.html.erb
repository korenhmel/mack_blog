
<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this link from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %> <br>
    <%= form.text_field :title, id: :post_title, class: "form-control"  %>
  </div><br>

  <div class="form-group">
    <%= form.label :body %> <br>
    <%= form.text_area :body, id: :post_body, class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= form.submit "Save Post", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
